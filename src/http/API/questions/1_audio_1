		<input type="submit" class="answer_button" value="Reply" id="b1" onclick="
			var token = (new URLSearchParams(window.location.search)).get('token');
			var questions = '';
			var answers = '';
			
			for (var i = 1; i <= 7; i++) {
				questions += '&questions[]=' + (100 + i);
				answers += '&answers[]=' + document.querySelector('input[id=a' + (100 + i) + ']:checked').value;
			}
			
			var xhr = new XMLHttpRequest();
			xhr.open('GET', 'https://englymp.ru/API/user.steps.done.php?' + questions + answers + '&token=' + token, false);
			xhr.send();
			if (time > 0) alert(xhr.responseText);
		">
